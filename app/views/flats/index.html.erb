<h1>All our Flats (<%= @flats.count %>)</h1>

<div class="container">
  <div class="flat-card">
    <% @flats.each do |flat| %>
      <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div>
      <div>
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
      </div>
      <div>
        <i class="fas fa-hand-holding-usd"><%= flat.price_per_night %></i>
        <i class="fas fa-user-friends"><%= flat.number_of_guests %></i>
      </div>
      <div>
        <%= link_to 'Show details', flat_path(flat), class: 'btn-form' %>
        <%= link_to 'Edit', edit_flat_path(flat), class: 'btn-form' %>
        <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn-form' %>
      </div>
    <% end %>
  </div>
</div>

<div>
  <%= link_to 'Add a Flat', new_flat_path, class: 'btn-form' %>
</div>
